{
  "name": "bizurs_node",
  "version": "1.0.0",
  "description": "REST services for Bizurs platform",
  "main": "server.js",
  "directories": {
    "test": "jest"
  },
  "scripts": {
    "prestart": "npm run tsc",
    "start": "pm2 start dist/server.js --name 'node_app'",
    "stop": "pm2 stop node_app",
    "tsc": "tsc",
    "prod": "tsc & node dist/server.js",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./src/server.ts",
    "test": "jest --detectOpenHandles",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --config .prettierrc './src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bizurs/node.git"
  },
  "author": "sekhara suman sahu <sekharasahu@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bizurs/node/issues"
  },
  "homepage": "https://github.com/bizurs/node#readme",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.13",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.13",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-validator": "^6.5.0",
    "handlebar": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.9",
    "multer": "^1.3.0",
    "nodemailer": "^6.4.10",
    "path": "^0.12.7",
    "pm2": "^4.4.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "@types/multer": "^1.3.6"
  }
}
